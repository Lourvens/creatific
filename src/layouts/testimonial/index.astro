---
import usrImg from "@assets/usr1.png";
---

<section class="section container container--small">
  <div class="section-left">
    <h3 class="section__subtitle">testimonials</h3>
    <h1 class="section__title">what our clients says</h1>
    <p class="section__text">
      Lorem ipsum dolor sit, amet consectetur adipisicing elit. Eaque nesciunt
      ipsum aut minima sed explicabo qui necessitatibus asperiores tempora sint
    </p>
  </div>
  <div class="card">
    <div class="card__img">
      <img src={usrImg} />
    </div>
    <div class="card__content">
      <p>
        "Lorem, ipsum dolor sit amet consectetur adipisicing elit. Corporis
        possimus nihil, distinctio dolorum nulla consequuntur accusamus! Eum"
      </p>
      <div>
        <h1 class="card__title">carmen fendi</h1>
        <h3 class="card__desc">fashion closet</h3>
      </div>
    </div>
    <div class="card__action">
      <button>
        <i class="fa-solid fa-arrow-left-long"></i>
      </button>
      <button class="active">
        <i class="fa-solid fa-arrow-right-long"></i>
      </button>
    </div>
  </div>
</section>

<style lang="scss">
  section {
    display: flex;
    margin: var(--space-lg) 0;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
  }
  .section-left {
    width: 560px;
  }
  .card {
    flex-shrink: 0;
    width: 400px;
    padding: var(--space-sm) var(--space-md);
    box-shadow: 3px 3px 54px #5b5b5b14;
    border-radius: 12px;
    // display: flex;
    p {
      line-height: 120%;
      font-size: 16px;
      margin-bottom: var(--space-xs);
    }
    &__img {
      position: absolute;
      top: 50%;
      left: 0;
      transform: translateY(-50%) translateX(-50%);
      width: 90px;
      height: 90px;
      background-color: #e5e5e5;
      border-radius: 50%;
      border: 4px solid #f5f5f5;
      overflow: hidden;
      img {
        width: 100%;
        object-fit: cover;
      }
    }
    &__content {
      margin-left: 4rem;
    }
    &__action {
      display: inline-block;
      float: right;
      display: flex;
      gap: var(--space-sm);
      button {
        background-color: transparent;
        border: none;
        cursor: pointer;
        font-size: var(--font-large);
        color: var(--link-color);
        transition: all ease 0.3s;
        &:hover,
        &.active {
          color: var(--link-color-tint);
        }
      }
    }
  }

  @media screen and (max-width: 1023px) {
    .card {
      width: 350px;
      padding: 0;
      &__img {
        position: relative;
        transform: none;
        float: left;
        border-radius: 10px;
      }
      &__content {
        padding-right: var(--space-xs);
        padding-left: var(--space-lg);
        padding-top: var(--space-xs);
      }
      &__action {
        margin: var(--space-xs) var(--space-md);
      }
    }
  }
</style>
